@page "/Adminbookbrowser"
<div>
	<h3>Book Browser</h3>
	<input type="search" id="query" name="q" placeholder="Search...">
	<button>Search</button>
</div>

<table class="thead-dark">
	<thead>
		<tr>
			<th scope="col">Title</th>
			<th scope="col">Date Published</th>
			<th scope="col">Price</th>
			<th scope="col">Reviews</th>
			<th scope="col">SupplierID</th>
		</tr>
	</thead>
	<tbody>

		@foreach (Book b in DatabaseInstance.viewBooks())
		{
			<tr>
				<td>@b.title</td>
				<td>@b.pubDate</td>
				<td>@b.price</td>
				<td>@b.reviews</td>
				<td>@b.supplierID</td>
			</tr>
		}

	</tbody>
</table>
<input type="text" placeholder="Enter ISBN#" @onchange="Eval_ISBN" id="ISBN#" />
<a href="/Admineditbook/{@ISBN}">
	<p class="btn btn-primary">
		Update Book Details
	</p>
</a>
@code {
	private string ISBN;
	private void Eval_ISBN(ChangeEventArgs e)
	{
		ISBN = (string)e.Value;
	}
}

