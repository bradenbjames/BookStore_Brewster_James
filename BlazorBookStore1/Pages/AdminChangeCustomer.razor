@page "/Adminchangecustomers"
<div>
	<h3>Edit Customer Details</h3>
	<input type="search" id="query" name="q" placeholder="Search...">
	<button>Search</button>
</div>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach(Customers c in DatabaseInstance.viewCustomers())
		{
			<tr>
				<td>@c.fName</td>
				<td>@c.lName</td>
			</tr>
		}
	</tbody>
</table>
<input type="text" @onchange="Eval_CustomerID" placeholder="Enter customerID"></input>
<button class="btn btn-primary">Edit Customer</button>


@code {
	private int customerID;
	private void Eval_CustomerID(ChangeEventArgs e)
	{
		customerID = Int32.Parse((string)e.Value);
	}
}
