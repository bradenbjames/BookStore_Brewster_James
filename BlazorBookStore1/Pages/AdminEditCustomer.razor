@page "/Admineditcustomer/{customerID:int}"
<div>
	<h3>Edit Customer Details</h3>
	<input type="search" id="query" name="q" placeholder="Search...">
	<button>Search</button>
</div>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach(Customers c in DatabaseInstance.viewCustomers())
		{
			<tr>
				<td><input value=@c.fName type="text"></td>
				<td><input value=@c.lName type="text"></td>
			</tr>
		}
	</tbody>
</table>
<input type="text" placeholder="Edit First Name">
<input type="text" placeholder="Edit Last Name">
<button class="btn btn-primary">Confirm Changes</button>
<button class="btn btn-primary">Delete Customer</button>



@code {
	[Parameter]
	public int? customerID { get; set; }
}
