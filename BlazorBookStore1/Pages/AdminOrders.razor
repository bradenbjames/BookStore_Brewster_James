@page "/Adminorders"
<h3>Orders</h3>
<div>
	<input type="search" id="query" name="q" placeholder="Search...">
	<button>Search</button>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Order#</th>
			<th>Order Date</th>
			<th>Number of Items</th>
			<th>Customer</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>a</td>
			<td>b</td>
			<td>c</td>
			<td>d</td>
		</tr>
	</tbody>
</table>
<input type="text" placeholder="Enter rowId here" @onchange="Eval_OrderID" id="DOB" class="form-control form-control-sm" />
<button class="btn btn-primary"><a href="/Admineditorder" class="text-white-50 fw-bold"> Edit Order</a></button>

@code {
	private int orderID;
	private void Eval_OrderID(ChangeEventArgs e)
	{
		orderID = Int32.Parse((string)e.Value);
	}
}
