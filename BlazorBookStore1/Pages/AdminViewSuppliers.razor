@page "/Adminviewsuppliers"
<div>
	<h3>Suppliers</h3>
	<input type="search" id="query" name="q" placeholder="Search...">
	<button>Search</button>
</div>

<table class="thead-dark">
	<thead>
		<tr>
			<th scope="col">SupplierID</th>
			<th scope="col">Supplier Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach(Supplier s in DatabaseInstance.viewSuppliers())
		{
			<tr>
				<td>@s.supplierID</td>
				<td>@s.name</td>
			</tr>
		}
	</tbody>
</table>
<input type="text" @onchange="Eval_supplierID" placeholder="Enter supplier ID"/>
<button class="btn btn-primary">Delete Supplier</button>

<input type="text" @onchange="Eval_supplierID" placeholder="Enter supplier ID" />
<button class="btn btn-primary" href="Admineditsupplier">Edit Supplier</button>


@code {
	private int supplierID;
	private void Eval_supplierID(ChangeEventArgs e)
	{
		supplierID = Int32.Parse((string)e.Value);
	}
}
