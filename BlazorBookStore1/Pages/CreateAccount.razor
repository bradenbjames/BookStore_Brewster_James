@page "/createaccount"

<section class="vh-100 gradient-custom">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card bg-dark text-white" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">

						<div class="mb-md-5 mt-md-4 pb-5">

							<h2 class="fw-bold mb-2">Create Account</h2>
							<p class="text-white-50 mb-5"></p>

							<div class="form-outline form-white mb-4">
								<input type="email" id="firstName" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">First Name:</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="text" id="lastName" class="form-control form-control-lg" />
								<label class="form-label" for="typePasswordX">Last Name</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Address Line 1</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Address Line 2</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">City</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">ZipCode</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">State</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Phone Number</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="email" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Email</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="password" id="typeEmailX" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Password</label>
							</div>

							<div class="form-outline form-white mb-4">
								<input type="checkbox" id="adminCheckbox" @onchange="Eval_admin" class="form-control form-control-lg" />
								<label class="form-label" for="typeEmailX">Administrator?:</label>
							</div>

							<p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

							<button class="btn btn-outline-light btn-lg px-5" @onclick="()=>DatabaseInstance.CreateAccount(fNameString, lNameString, emailString, passwordString, isAdmin, addressString, phone)"type="submit">Create Account</button>

							<div class="d-flex justify-content-center text-center mt-4 pt-1">
								<a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
								<a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
								<a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@code {
	private string fNameString { get; set; }
	private void Eval_fName(ChangeEventArgs x)
	{
		fNameString = (string)x.Value;
	}

	private string lNameString { get; set; }
	private void Eval_lName(ChangeEventArgs x)
	{
		lNameString = (string)x.Value;
	}

	private string emailString { get; set; }
	private void Eval_email(ChangeEventArgs x)
	{
		emailString = (string)x.Value;
	}

	private string passwordString { get; set; }
	private void Eval_password(ChangeEventArgs x)
	{
		passwordString = (string)x.Value;
	}

	private bool isAdmin { get; set; }
	private void Eval_admin(ChangeEventArgs x)
	{
		isAdmin = (bool)x.Value;
	}

	private string addressString { get; set; }
	private void Eval_address(ChangeEventArgs x)
	{
		addressString = (string)x.Value;
	}

	private int phone { get; set; }
	private void Eval_phone(ChangeEventArgs x)
	{
		phone = (int)x.Value;
	}

}