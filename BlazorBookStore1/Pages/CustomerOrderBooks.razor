@page "/Customerorderbooks"
<h3>CustomerOrderBooks</h3>
<table class="table">
	<thead>
		<tr>
			<th>ISBN</th>
			<th>Title</th>
			<th>Date Published</th>
			<th>Price</th>
			<th>Reviews</th>
		</tr>
	</thead>
	<tbody>

		@foreach (Book b in DatabaseInstance.viewBooks())
		{
			<tr>
				<td>@b.isbnNum</td>
				<td>@b.title</td>
				<td>@b.pubDate</td>
				<td>@b.price</td>
				<td>@b.reviews</td>
			</tr>
		}

	</tbody>
</table>
<input type="text" placeholder="Enter ISBN#" id="bookToOrderTxt" class="form-control form-control-lg" />
<button class="btn btn-primary">Add Book to Order</button>
